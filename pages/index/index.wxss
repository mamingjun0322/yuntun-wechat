/* pages/index/index.wxss */
.page-container {
  min-height: 100vh;
  background: #f7f8fa;
  display: flex;
  flex-direction: column;
}

/* 自定义导航栏 */
.custom-navbar {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 20rpx;
  flex-shrink: 0;
}

.navbar-content {
  padding: 0 30rpx;
}

.location {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.location-text {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
}

.search-box {
  height: 72rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  backdrop-filter: blur(10rpx);
}

.search-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.search-placeholder {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 轮播图（顶部全屏） */
.banner-section {
  flex-shrink: 0;
  margin-bottom: 20rpx;
}

.banner-swiper {
  height: 360rpx;
  width: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 通知栏 */
.notice-bar {
  display: flex;
  align-items: center;
  height: 80rpx;
  background: linear-gradient(135deg, #fff4e6 0%, #ffe4cc 100%);
  padding: 0 30rpx;
  margin: 0 0 20rpx 0;
  overflow: hidden;
}

.notice-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.notice-swiper {
  flex: 1;
  height: 80rpx;
}

.notice-content {
  display: flex;
  align-items: center;
  height: 80rpx;
  font-size: 28rpx;
  color: #ff6b35;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 主内容区：左右布局 */
.main-container {
  flex: 1;
  display: flex;
  overflow: hidden;
  margin-top: 20rpx;
}

/* 左侧分类边栏 */
.category-sidebar {
  width: 180rpx;
  background: linear-gradient(to right, #f5f3ff 0%, #f8f7ff 100%);
  border-right: 2rpx solid #e9e5ff;
  flex-shrink: 0;
  box-shadow: 2rpx 0 8rpx rgba(102, 126, 234, 0.08);
}

.sidebar-item {
  position: relative;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  transition: all 0.3s ease;
}

.sidebar-item.active {
  background: linear-gradient(to right, #ede9fe 0%, #f3f1ff 100%);
}

.sidebar-name {
  font-size: 26rpx;
  color: #6b6b8c;
  font-weight: 400;
  transition: all 0.3s ease;
}

.sidebar-item.active .sidebar-name {
  color: #5b4fc4;
  font-weight: 600;
  font-size: 28rpx;
}

.sidebar-indicator {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 0 6rpx 6rpx 0;
  animation: slideIn 0.3s ease;
}

@keyframes slideIn {
  from {
    width: 0;
    opacity: 0;
  }
  to {
    width: 6rpx;
    opacity: 1;
  }
}

/* 右侧内容区 */
.content-area {
  flex: 1;
  background: #f8f9fb;
}

/* 商品列表 */
.goods-section {
  padding: 20rpx;
}

.goods-list {
  display: flex;
  flex-direction: column;
}

.goods-item {
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  transition: all 0.3s ease;
}

.goods-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.goods-image {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.goods-info {
  flex: 1;
  min-width: 0;
  padding: 20rpx 16rpx 20rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  line-height: 1.4;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-desc {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.5;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
  padding-right: 4rpx;
}

.price-box {
  flex: 1;
  min-width: 0;
  display: flex;
  align-items: baseline;
  overflow: hidden;
}

.price-symbol {
  font-size: 24rpx;
  color: #FF3B30;
  font-weight: 500;
}

.price-value {
  font-size: 40rpx;
  color: #FF3B30;
  font-weight: bold;
  margin-right: 8rpx;
}

.original-price {
  font-size: 24rpx;
  color: #999999;
  text-decoration: line-through;
  margin-left: 10rpx;
}

.add-btn {
  width: 60rpx;
  height: 60rpx;
  flex-shrink: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
  transition: all 0.2s ease;
}

.add-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.5);
}

.add-icon {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
}

/* 商品数量控制器 */
.goods-quantity-control {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-shrink: 0;
}

.quantity-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.quantity-btn.minus {
  background: #f5f5f5;
  border: 2rpx solid #e0e0e0;
}

.quantity-btn.plus {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.quantity-btn:active {
  transform: scale(0.9);
}

.quantity-btn .btn-icon {
  font-size: 28rpx;
  font-weight: bold;
}

.quantity-btn.minus .btn-icon {
  color: #666666;
}

.quantity-btn.plus .btn-icon {
  color: #ffffff;
}

.quantity-text {
  min-width: 40rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

/* 加载状态 */
.load-more {
  padding: 40rpx 0 80rpx;
  text-align: center;
}

.load-text {
  font-size: 28rpx;
  color: #999999;
}

/* 空状态 */
.empty-state {
  padding: 150rpx 0;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* ==================== 购物车浮动按钮 ==================== */
.cart-float-btn {
  position: fixed;
  right: 30rpx;
  bottom: 100rpx;
  width: 110rpx;
  height: 110rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

.cart-icon {
  font-size: 48rpx;
}

.cart-badge {
  position: absolute;
  top: 0;
  right: 0;
  min-width: 36rpx;
  height: 36rpx;
  background: #FF3B30;
  color: #ffffff;
  font-size: 20rpx;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
  font-weight: bold;
  border: 3rpx solid #ffffff;
}

/* ==================== 购物车抽屉 ==================== */
.cart-drawer {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  display: none;
}

.cart-drawer.show {
  display: block;
}

.drawer-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.drawer-content {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 600rpx;
  max-width: 85%;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  animation: slideIn 0.3s;
}

@keyframes slideIn {
  from {
    transform: translateX(100%);
  }
  to {
    transform: translateX(0);
  }
}

/* 抽屉头部 */
.drawer-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.drawer-title {
  font-size: 32rpx;
  font-weight: 500;
}

.drawer-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.clear-btn {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
}

.close-btn {
  font-size: 40rpx;
  color: #ffffff;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 抽屉主体 */
.drawer-body {
  flex: 1;
  padding: 20rpx;
}

.cart-item {
  display: flex;
  padding: 20rpx;
  background: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #e0e0e0;
  border-radius: 50%;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.checkbox.checked {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
}

.check-icon {
  color: #ffffff;
  font-size: 24rpx;
  font-weight: bold;
}

.cart-goods-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.cart-goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.cart-goods-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.cart-goods-specs {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-top: 8rpx;
}

.spec-item {
  padding: 4rpx 12rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
  font-size: 22rpx;
  color: #666666;
}

.cart-goods-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 8rpx;
}

.cart-price {
  display: flex;
  align-items: baseline;
}

.cart-quantity-control {
  display: flex;
  align-items: center;
  border: 2rpx solid #e0e0e0;
  border-radius: 20rpx;
  overflow: hidden;
}

.cart-control-btn {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666666;
  background: #f5f5f5;
}

.cart-quantity-value {
  width: 60rpx;
  text-align: center;
  font-size: 26rpx;
  color: #333333;
  background: #ffffff;
}

/* 空购物车 */
.drawer-empty {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.drawer-empty .empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.3;
}

.drawer-empty .empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* 抽屉底部 */
.drawer-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: #ffffff;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.footer-left {
  flex: 1;
  display: flex;
  align-items: center;
}

.select-all {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
}

.select-text {
  font-size: 26rpx;
  color: #333333;
  margin-left: 10rpx;
}

.total-info {
  display: flex;
  align-items: baseline;
}

.total-label {
  font-size: 24rpx;
  color: #666666;
}

.total-symbol {
  font-size: 24rpx;
  color: #FF3B30;
  font-weight: 500;
  margin-left: 8rpx;
}

.total-value {
  font-size: 36rpx;
  color: #FF3B30;
  font-weight: bold;
}

.cart-checkout-btn {
  padding: 20rpx 40rpx;
  background: #cccccc;
  color: #ffffff;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  white-space: nowrap;
}

.cart-checkout-btn.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}
