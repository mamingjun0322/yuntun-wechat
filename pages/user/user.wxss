/* pages/user/user.wxss */
.user-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 用户信息区 */
.user-header {
  display: flex;
  align-items: center;
  padding: 80rpx 30rpx 60rpx;
  color: #ffffff;
}

.avatar-wrapper {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.user-avatar {
  width: 100%;
  height: 100%;
}

.default-avatar {
  font-size: 60rpx;
  color: rgba(255, 255, 255, 0.8);
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.user-tags {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.tag {
  padding: 4rpx 12rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
}

.user-phone {
  font-size: 26rpx;
  opacity: 0.8;
}

.login-tip {
  font-size: 26rpx;
  opacity: 0.9;
  margin-top: 8rpx;
}

.edit-profile-btn {
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #ffffff;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* 积分和优惠券 */
.stats-card {
  display: flex;
  margin: -40rpx 30rpx 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: #f0f0f0;
}

/* 我的订单 */
.order-card {
  margin: 0 30rpx 20rpx;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.view-all {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #999999;
}

.arrow {
  font-size: 36rpx;
  margin-left: 4rpx;
}

.order-tabs {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.order-tab {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tab-icon-wrapper {
  position: relative;
  margin-bottom: 12rpx;
}

.tab-icon {
  font-size: 48rpx;
}

.order-badge {
  position: absolute;
  top: -8rpx;
  right: -16rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  background: #FF3B30;
  color: #ffffff;
  font-size: 20rpx;
  font-weight: bold;
  border-radius: 16rpx;
  padding: 0 8rpx;
  border: 2rpx solid #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(255, 59, 48, 0.3);
}

.tab-name {
  font-size: 24rpx;
  color: #666666;
}

/* 功能菜单 */
.menu-card {
  margin: 0 30rpx 20rpx;
  padding: 0;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.menu-name {
  font-size: 28rpx;
  color: #333333;
}

.menu-arrow {
  font-size: 40rpx;
  color: #cccccc;
}

/* 退出登录 */
.logout-btn {
  margin: 40rpx 30rpx 0;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #ffffff;
  color: #FF3B30;
  border-radius: 44rpx;
  font-size: 28rpx;
}

/* 未登录提示 */
.login-card {
  margin: 0 30rpx;
  padding: 80rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-text {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 40rpx;
}

.login-button {
  width: 400rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 44rpx;
  font-size: 28rpx;
}
