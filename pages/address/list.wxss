/* pages/address/list.wxss */
.address-list-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 140rpx;
}

/* 地址列表 */
.address-list {
  padding: 20rpx 30rpx;
}

.address-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.address-item.selectable {
  cursor: pointer;
}

/* 默认标签 */
.default-tag {
  position: absolute;
  top: 0;
  right: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  font-size: 22rpx;
  padding: 8rpx 20rpx;
  border-radius: 0 16rpx 0 16rpx;
}

/* 地址头部 */
.address-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.receiver-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-right: 20rpx;
}

.receiver-phone {
  font-size: 28rpx;
  color: #666666;
}

/* 地址详情 */
.address-detail {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.address-region {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

.address-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

/* 操作按钮 */
.address-actions {
  display: flex;
  align-items: center;
  gap: 40rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-item {
  display: flex;
  align-items: center;
}

.action-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.action-text {
  font-size: 26rpx;
  color: #666666;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-icon {
  font-size: 160rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* 底部按钮 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.add-btn {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: 500;
}
