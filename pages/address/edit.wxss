/* pages/address/edit.wxss */
.edit-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 140rpx;
}

/* 表单区域 */
.form-section {
  background: #ffffff;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item.full {
  flex-direction: column;
  align-items: flex-start;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  width: 140rpx;
  font-size: 28rpx;
  color: #333333;
  flex-shrink: 0;
}

.form-label.required::before {
  content: '*';
  color: #FF3B30;
  margin-right: 4rpx;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
  margin-top: 20rpx;
}

/* 选择位置 */
.location-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
  margin-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.location-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.location-text {
  font-size: 28rpx;
  color: #667eea;
}

/* 默认地址 */
.default-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  margin-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.default-label {
  font-size: 28rpx;
  color: #333333;
}

/* 保存按钮 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.save-btn {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: 500;
}
