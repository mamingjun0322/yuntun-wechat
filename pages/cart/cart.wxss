/* pages/cart/cart.wxss */
.cart-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 140rpx;
}

/* 购物车列表 */
.cart-list {
  height: calc(100vh - 140rpx);
  padding: 20rpx 30rpx;
}

.cart-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

/* 选择框 */
.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #d0d0d0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.checkbox.checked {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
}

.check-icon {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: bold;
}

/* 商品图片 */
.goods-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

/* 商品信息 */
.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 160rpx;
}

.goods-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-specs {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin: 8rpx 0;
}

.spec-item {
  font-size: 22rpx;
  color: #999999;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.goods-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 价格 */
.price {
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 24rpx;
  color: #FF3B30;
  font-weight: 500;
}

.price-value {
  font-size: 32rpx;
  color: #FF3B30;
  font-weight: bold;
}

/* 数量控制 */
.quantity-control {
  display: flex;
  align-items: center;
}

.control-btn {
  width: 48rpx;
  height: 48rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #333333;
}

.quantity-value {
  min-width: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333333;
  padding: 0 16rpx;
}

/* 空购物车 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-icon {
  font-size: 160rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 60rpx;
}

.empty-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 底部结算栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.bar-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.select-all {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
}

.select-text {
  font-size: 28rpx;
  color: #333333;
  margin-left: 8rpx;
}

.total-info {
  display: flex;
  align-items: baseline;
}

.total-label {
  font-size: 24rpx;
  color: #666666;
}

.total-symbol {
  font-size: 24rpx;
  color: #FF3B30;
  margin-left: 8rpx;
}

.total-value {
  font-size: 36rpx;
  color: #FF3B30;
  font-weight: bold;
}

/* 结算按钮 */
.checkout-btn {
  width: 220rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #cccccc;
  color: #ffffff;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.checkout-btn.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}
