<!--pages/login/login.wxml-->
<view class="login-container">
  <view class="login-content">
    <!-- Logo区域 -->
    <view class="logo-section">
      <image class="logo" src="/images/logo.png" mode="aspectFit"></image>
      <text class="app-name">云吞外卖</text>
      <text class="app-slogan">美食就在身边</text>
    </view>
    
    <!-- 登录按钮区域 -->
    <view class="login-section">
      <button 
        class="login-btn" 
        bindtap="wxLogin" 
        loading="{{loading}}"
      >
        <text class="btn-text">微信一键登录</text>
      </button>
      
      <view class="tips">
        <text class="tips-text">登录即表示同意</text>
        <text class="tips-link" bindtap="showAgreement">《用户协议》</text>
        <text class="tips-text">和</text>
        <text class="tips-link" bindtap="showPrivacy">《隐私政策》</text>
      </view>
    </view>
  </view>
  
  <!-- 装饰元素 -->
  <view class="decoration">
    <view class="circle circle1"></view>
    <view class="circle circle2"></view>
    <view class="circle circle3"></view>
  </view>
</view>
