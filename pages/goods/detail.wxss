/* pages/goods/detail.wxss */
.detail-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 140rpx;
}

/* 图片轮播 */
.images-section {
  position: relative;
  width: 100%;
  height: 750rpx;
  background: #ffffff;
}

.images-swiper {
  width: 100%;
  height: 100%;
}

.goods-image {
  width: 100%;
  height: 100%;
}

.image-indicator {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #ffffff;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

/* 商品信息 */
.info-section {
  margin: 20rpx 30rpx;
}

.price-box {
  display: flex;
  align-items: baseline;
  margin-bottom: 20rpx;
}

.current-price {
  display: flex;
  align-items: baseline;
  margin-right: 20rpx;
}

.price-symbol {
  font-size: 32rpx;
  color: #FF3B30;
  font-weight: 500;
}

.price-value {
  font-size: 56rpx;
  color: #FF3B30;
  font-weight: bold;
}

.original-price {
  font-size: 28rpx;
  color: #999999;
  text-decoration: line-through;
}

.goods-name {
  font-size: 36rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.goods-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.goods-tags {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.tag {
  display: inline-block;
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  font-size: 24rpx;
  border-radius: 20rpx;
  margin-right: 16rpx;
  margin-bottom: 10rpx;
}

.sales-tag {
  background: #f0f0f0;
  color: #999999;
}

/* 规格选择 */
.spec-section {
  margin: 0 30rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.section-label {
  font-size: 28rpx;
  color: #333333;
}

.spec-value {
  display: flex;
  align-items: center;
}

.spec-text {
  font-size: 28rpx;
  color: #999999;
  margin-right: 10rpx;
}

.arrow {
  font-size: 40rpx;
  color: #999999;
}

/* 商品详情 */
.detail-section {
  margin: 0 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-content {
  line-height: 1.8;
}

.detail-text {
  font-size: 28rpx;
  color: #666666;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.bar-left {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.bar-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20rpx;
}

.btn-icon {
  font-size: 40rpx;
  margin-bottom: 4rpx;
}

.btn-text {
  font-size: 20rpx;
  color: #666666;
}

.bar-right {
  flex: 1;
  display: flex;
  gap: 20rpx;
}

.btn-plain {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #ffffff;
  color: #667eea;
  border: 2rpx solid #667eea;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.btn-primary {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 规格选择弹窗 */
.spec-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  display: none;
}

.spec-modal.show {
  display: block;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  max-height: 80vh;
  background: #ffffff;
  border-radius: 40rpx 40rpx 0 0;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.modal-header {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.modal-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
}

.modal-info {
  flex: 1;
}

.modal-price {
  font-size: 40rpx;
  color: #FF3B30;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.modal-stock {
  font-size: 24rpx;
  color: #999999;
}

.modal-close {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999999;
}

.modal-body {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.spec-group {
  margin-bottom: 40rpx;
}

.spec-name {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 20rpx;
}

.spec-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.spec-option {
  padding: 16rpx 32rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333333;
  border: 2rpx solid transparent;
}

.spec-option.active {
  background: #fff;
  color: #667eea;
  border-color: #667eea;
}

.quantity-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.quantity-label {
  font-size: 28rpx;
  color: #333333;
}

.quantity-control {
  display: flex;
  align-items: center;
}

.control-btn {
  width: 60rpx;
  height: 60rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #333333;
}

.quantity-value {
  width: 100rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333333;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.add-cart-btn {
  background: #fff;
  color: #667eea;
  border: 2rpx solid #667eea;
}

.buy-now-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}
