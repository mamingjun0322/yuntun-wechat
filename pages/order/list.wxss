/* pages/order/list.wxss */
.order-list-container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* Tab栏 */
.tabs-bar {
  background: #ffffff;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tabs-scroll {
  white-space: nowrap;
  padding: 0 30rpx;
}

.tab-item {
  display: inline-block;
  padding: 28rpx 20rpx;
  font-size: 28rpx;
  color: #666666;
  position: relative;
  margin-right: 40rpx;
}

.tab-item.active {
  color: #667eea;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 3rpx;
}

/* 订单列表 */
.order-list {
  height: calc(100vh - 84rpx);
  padding: 20rpx 30rpx 30rpx 0rpx;
}

.order-item {
  background:rgba(255, 255, 255, 0.89);
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
}

.order-item:active {
  transform: scale(0.98);
}

/* 订单头部 */
.order-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background: #fafafa;
}

.order-header-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.order-no {
  font-size: 24rpx;
  color: #999999;
  font-weight: 400;
}

.order-time {
  font-size: 22rpx;
  color: #bbbbbb;
}

.order-status {
  font-size: 26rpx;
  font-weight: 600;
  flex-shrink: 0;
}

.status-1 {
  color: #FF9500;
}

.status-2 {
  color: #667eea;
}

.status-3 {
  color: #4CD964;
}

.status-4 {
  color: #999999;
}

.status-5 {
  color: #999999;
}

/* 商品列表 */
.goods-list {
  padding: 16rpx 24rpx;
}

.goods-item {
  display: flex;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.goods-item:first-child {
  padding-top: 0;
}

.goods-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.goods-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
  background: #f5f5f5;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-width: 0;
}

.goods-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 6rpx;
}

.goods-specs {
  display: flex;
  gap: 8rpx;
  margin-bottom: 8rpx;
  flex-wrap: wrap;
}

.spec-item {
  font-size: 22rpx;
  color: #999999;
  background: #f8f8f8;
  padding: 3rpx 10rpx;
  border-radius: 4rpx;
}

.goods-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.goods-price {
  font-size: 30rpx;
  color: #FF3B30;
  font-weight: 600;
}

.goods-quantity {
  font-size: 26rpx;
  color: #999999;
  margin-left: auto;
}

/* 订单信息 */
.order-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 24rpx;
  background: #fafafa;
}

.order-type {
  font-size: 24rpx;
  color: #666666;
}

.order-amount {
  display: flex;
  align-items: baseline;
}

.amount-label {
  font-size: 24rpx;
  color: #666666;
  margin-right: 4rpx;
}

.amount-value {
  font-size: 34rpx;
  color: #FF3B30;
  font-weight: 700;
  line-height: 1;
}

/* 订单操作 */
.order-actions {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 16rpx 24rpx;
  gap: 12rpx;
}

.action-btn {
  padding: 14rpx 36rpx;
  border-radius: 50rpx;
  font-size: 26rpx;
  text-align: center;
  font-weight: 500;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.95);
}

.cancel-btn {
  background: #ffffff;
  color: #999999;
  border: 2rpx solid #e5e5e5;
}

.plain-btn {
  background: #ffffff;
  color: #667eea;
  border: 2rpx solid #667eea;
}

.primary-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border: 2rpx solid transparent;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.25);
}

.disabled-btn {
  background: #f5f5f5;
  color: #999999;
  border: 2rpx solid transparent;
}

/* 加载状态 */
.load-more {
  padding: 40rpx 0;
  text-align: center;
}

.load-text {
  font-size: 28rpx;
  color: #999999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-icon {
  font-size: 160rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 60rpx;
}

.empty-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 40rpx;
  font-size: 28rpx;
}
