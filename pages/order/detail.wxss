/* pages/order/detail.wxss */
.detail-container {
  min-height: 100vh;
  background: #f5f5f5;
}

.detail-content {
  height: calc(100vh - 140rpx);
  padding: 20rpx 30rpx;
}

/* 订单状态卡片 */
.status-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  color: #ffffff;
}

.status-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.status-text {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.status-tip {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 信息卡片 */
.info-card {
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  width: 140rpx;
  font-size: 28rpx;
  color: #666666;
  flex-shrink: 0;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
}

.phone-btn {
  font-size: 36rpx;
  margin-left: 20rpx;
}

/* 商品卡片 */
.goods-card {
  margin-bottom: 20rpx;
}

.goods-list {
  margin-top: 20rpx;
}

.goods-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.goods-item:last-child {
  border-bottom: none;
}

.goods-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.goods-specs {
  display: flex;
  gap: 10rpx;
  margin: 8rpx 0;
}

.spec-item {
  font-size: 22rpx;
  color: #999999;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.goods-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.goods-price {
  font-size: 28rpx;
  color: #FF3B30;
  font-weight: 500;
}

.goods-quantity {
  font-size: 24rpx;
  color: #999999;
}

/* 订单信息 */
.order-card {
  margin-bottom: 20rpx;
}

.order-row {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-row:last-child {
  border-bottom: none;
}

.order-label {
  width: 140rpx;
  font-size: 28rpx;
  color: #666666;
  flex-shrink: 0;
}

.order-value {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.order-no {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.copy-btn {
  font-size: 24rpx;
  color: #667eea;
  margin-left: 20rpx;
  flex-shrink: 0;
}

/* 费用明细 */
.amount-card {
  margin-bottom: 20rpx;
}

.amount-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.amount-row:last-child {
  border-bottom: none;
}

.amount-label {
  font-size: 28rpx;
  color: #666666;
}

.amount-value {
  font-size: 28rpx;
  color: #333333;
}

.amount-value.discount {
  color: #FF3B30;
}

.total-row {
  padding-top: 24rpx;
  margin-top: 12rpx;
  border-top: 2rpx solid #f0f0f0;
}

.total-label {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
}

.total-value {
  font-size: 36rpx;
  color: #FF3B30;
  font-weight: bold;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 20rpx 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  gap: 20rpx;
}

.bar-btn {
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  text-align: center;
}

.plain-btn {
  background: #ffffff;
  color: #667eea;
  border: 2rpx solid #667eea;
}

.primary-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  min-width: 180rpx;
}
