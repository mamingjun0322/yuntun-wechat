/* pages/payment/webview.wxss */
.payment-container {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 40rpx 0;
}

.qrcode-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 30rpx;
}

.qrcode-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 40rpx;
}

.qrcode-image {
  width: 500rpx;
  height: 500rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  padding: 20rpx;
  box-sizing: border-box;
}

.qrcode-tip {
  margin-top: 30rpx;
  font-size: 24rpx;
  color: #999;
}

.empty-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  min-height: 60vh;
}

.empty-icon {
  font-size: 120rpx;
  opacity: 0.3;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.empty-tip {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 60rpx;
}

.retry-btn {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 35rpx;
  font-size: 28rpx;
  border: none;
}

.retry-btn::after {
  border: none;
}

