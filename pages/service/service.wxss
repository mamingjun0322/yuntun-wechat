/* pages/service/service.wxss */
.service-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

/* 常见问题 */
.faq-section {
  background: #ffffff;
  padding: 20rpx 30rpx;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
}

.faq-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.faq-item {
  background: #f8f8f8;
  border-radius: 12rpx;
  overflow: hidden;
}

.faq-question {
  display: flex;
  align-items: center;
  padding: 24rpx;
  gap: 16rpx;
}

.question-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.question-text {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.toggle-icon {
  font-size: 24rpx;
  color: #999999;
  flex-shrink: 0;
}

.faq-answer {
  padding: 0 24rpx 24rpx 72rpx;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

/* 消息列表 */
.message-list {
  flex: 1;
  overflow-y: auto;
}

.message-wrapper {
  padding: 20rpx 30rpx;
  min-height: 100%;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #cccccc;
}

/* 消息项 */
.message-item {
  display: flex;
  margin-bottom: 30rpx;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.user-message {
  flex-direction: row-reverse;
}

.message-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.user-message .message-avatar {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.avatar-icon {
  font-size: 40rpx;
}

.message-content {
  flex: 1;
  margin: 0 20rpx;
  display: flex;
  flex-direction: column;
}

.user-message .message-content {
  align-items: flex-end;
}

.message-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.user-message .message-info {
  flex-direction: row-reverse;
}

.message-name {
  font-size: 24rpx;
  color: #999999;
}

.message-time {
  font-size: 22rpx;
  color: #cccccc;
}

.message-bubble {
  max-width: 480rpx;
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  line-height: 1.5;
  word-break: break-all;
}

.service-message .message-bubble {
  background: #ffffff;
  color: #333333;
  border-top-left-radius: 4rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.user-message .message-bubble {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-top-right-radius: 4rpx;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

/* 输入框 */
.input-bar, .input-box {
  background: #ffffff;
  border-top: 1rpx solid #f0f0f0;
}

.input-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  gap: 20rpx;
}

.input-box {
  padding: 0;
}

.input-top {
  padding: 16rpx 30rpx 8rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.limit-tip {
  font-size: 24rpx;
  color: #ff6b6b;
}

.input-bottom {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  gap: 20rpx;
}

.message-input {
  flex: 1;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.send-btn {
  width: 120rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  border-radius: 36rpx;
  font-size: 28rpx;
  color: #999999;
  background: #f0f0f0;
  transition: all 0.2s ease;
}

.send-btn.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.send-btn:active {
  transform: scale(0.95);
}
