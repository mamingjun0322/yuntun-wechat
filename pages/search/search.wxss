/* pages/search/search.wxss */
.search-page {
  min-height: 100vh;
  background: #f5f5f5;
}

/* ========== 搜索栏 ========== */
.search-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #fff;
  z-index: 100;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.search-content {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  gap: 16rpx;
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 32rpx;
  padding: 12rpx 24rpx;
  gap: 12rpx;
}

.icon-search {
  font-size: 32rpx;
  color: #999;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  height: 44rpx;
  line-height: 44rpx;
}

.icon-clear {
  font-size: 32rpx;
  color: #999;
  padding: 8rpx;
}

.btn-cancel {
  font-size: 28rpx;
  color: #666;
  padding: 8rpx 0;
}

/* ========== 搜索历史 ========== */
.search-history {
  margin-top: 120rpx;
  padding: 32rpx;
  background: #fff;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.history-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.btn-clear-history {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #999;
  padding: 8rpx;
}

.icon-delete {
  font-size: 28rpx;
}

.history-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.history-tag {
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #666;
}

/* ========== 热门搜索 ========== */
.hot-search {
  margin-top: 24rpx;
  padding: 32rpx;
  background: #fff;
}

.hot-header {
  margin-bottom: 24rpx;
}

.hot-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.hot-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.hot-tag {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #fff;
  opacity: 0.9;
}

.hot-tag:active {
  opacity: 1;
}

/* ========== 搜索结果 ========== */
.search-result {
  margin-top: 120rpx;
  padding: 24rpx;
}

.result-info {
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  text-align: center;
}

.result-count {
  color: #667eea;
  font-weight: 600;
  font-size: 32rpx;
  margin: 0 8rpx;
}

/* ========== 商品列表 ========== */
.goods-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.goods-item {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  gap: 20rpx;
  transition: all 0.3s;
}

.goods-item:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.goods-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
}

.goods-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods-footer {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-top: 8rpx;
}

.goods-price-box {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.price-symbol {
  font-size: 24rpx;
  color: #ff6b6b;
  font-weight: 600;
}

.price-value {
  font-size: 36rpx;
  color: #ff6b6b;
  font-weight: 700;
}

.price-original {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.goods-sales {
  font-size: 24rpx;
  color: #999;
}

/* ========== 空状态 ========== */
.empty-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  background: #fff;
  border-radius: 16rpx;
}

.empty-icon {
  width: 240rpx;
  height: 240rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-top: 32rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: #ccc;
  margin-top: 16rpx;
}

/* ========== 加载更多 ========== */
.load-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #999;
}
